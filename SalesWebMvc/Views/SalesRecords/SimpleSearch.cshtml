@model IEnumerable<SalesWebMvc.Models.SalesRecord>
@{
    ViewData["Title"] = "Simple Search";
}

<h1>@ViewData["Title"]</h1>

<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="search">
            <div class="form-group" ´>
                <div class="form-group">
                    <label for="min">Minimun Date</label>
                    <input type="date" class="form-control" name="min" value=@ViewData["min"]/>
                </div>
                <div class="form-group">
                    <label for="max">Maximum Date</label>
                    <input type="date" class="form-control" name="max" value=@ViewData["max"] />
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Filter</button>
        </form>
    </div>
</nav>
<div class="panel panel primary">
    <div class="panel-heading">
        <h3 class="panel-title">
            Total sales = $@Model.Sum(obj => obj.Amount).ToString("F2")
        </h3>
    </div>
    <div class="panel-body">
        <table class="tabel table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>|</th>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th>|</th>
                    <th>
                        @Html.DisplayNameFor(model => model.Seller)
                    </th>
                    <th>|</th>
                    <th>
                        @Html.DisplayNameFor(model => model.Seller.Department)
                    </th>
                    <th>|</th>
                    <th>
                        @Html.DisplayNameFor(model => model.Amount)
                    </th>
                    <th>|</th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>|</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>|</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Seller.Name)
                        </td>
                        <td>|</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Seller.Department.Name)
                        </td>
                        <td>|</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td>|</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>